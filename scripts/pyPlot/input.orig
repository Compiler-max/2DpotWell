#Input for 2D pot well code

[unitCell]
    aX          =   10
    aY          =   10
    supCx       =   2

[atoms]
    nAt         =   2
    relXpos     =    0.4 0.7ex0
    relYpos     =    0.500 0.500 
    atRx        =    1.00 2.000 
    atRy        =    3.5501 3.5501 
    atPot       =     -0.45 -0.45
    dVpot       =     -0.00 -0.45 

[wann]
    nBands      =   8
    nWfs        =   8
    projAt      =   1 1 1 1     2 2 2 2
    projnX      =   1 1 2 2     1 1 2 2
    projnY      =   1 2 1 2     1 2 1 2

[field]
    B0  =       1.0               # changed by probeB.sh
    Bext = 0.0 0.0 1.0             # changed by probeB.sh


[rashba]
    use_px_rashba  = t
    aRashba    = 2.4   #in eV Ang

[numerics]
   Gcut        = 10.0 # changed by probeB.sh
   nSolve      = 96 # changed by probeB.sh
   nQx         = 4 # changed by probeB.sh
    thres       =   0.1

[ham]
    debugHam    =   t
    doVdesc     =   f
    doZeeman    =   f
    doMagHam    =   f
    doRashba    =   f



[methods]
    doSolveHam  =   f
    doPw90      =   f
    doBerry     =   f

[w90]
    seedName    =   'wf1'
    useBloch    =   f
    nShells     =   1
   shells       = 1 # changed by probeB.sh
    nw90it      =   1000
    pw90GaugeB  =   f

[w90plot]
    nRx         =   10
    nRy         =   10
    nRz         =   2

[w90interp]
    k_mesh_multiplier = 4

[berry]
    fastConnConv=   t
    doNiu       =   t
    doGaugBack  =   f

[semiclassics]
    prefactF3   =   1.0







